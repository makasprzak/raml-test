#%RAML 1.0
title: test-api
types:
  User:
    type: object
    properties:
      name: string
  Account:
    type: object
    properties:
      id: number
/user:
  get:
    responses:
      200:
        body:
          application/json:
            type: User
  post:
    body:
      application/json:
        type: object
        example: { "name": "John Bean" }
    responses:
      201:
        headers:
          Location:
            example: http://localhost:8080/user
  /account:
    get:
      responses:
        200:
          body:
            application/json:
              type: Account


